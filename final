# main.py
import dash
from dash import html
from src._2_cancers import layout_2_cancers
from src._3_HPV_femme_monde import layout_3_hpv

# Initialisation de l'application Dash principale
app = dash.Dash(__name__)

# Layout principal
app.layout = html.Div([
    html.H1("HPV", style={"textAlign": "center"}),

    # Intégration des différents layouts
    html.Div([
        html.H2("Graphique 1: Cancers"),
        layout_2_cancers,  # Affichage de l'application 2_cancers
    ]),

    html.Div([
        html.H2("Graphique 2: HPV Femme Monde"),
        layout_3_hpv,  # Affichage de l'application 3_HPV_femme_monde
    ]),
])

if __name__ == "__main__":
    app.run_server(debug=True)
